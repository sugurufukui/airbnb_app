<div class="row">
	<div class="col-md-6 col-md-offset-3" >
		<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
			<div class="center field">
				<h2>ログイン</h2>
			</div>
			<%# <%= render 'shared/error_messages', object: f.object %>
			<div class="field">
				<%= f.email_field :email, class: 'form-control', placeholder: "メールアドレス" %>
			</div>
			<div class="field">
				<%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>
			</div>
			<div class="field">
				<%= f.submit "ログイン", class: "btn btn-primary form-control" %>
			</div>
			<div class="field">
				<%= link_to "新しいアカウントを作成", signup_path, class: 'btn btn-default form-control' %>
			</div>
		<% end%>
	</div>
</div>
