<div class="row">
	<div class="col-md-6 col-md-offset-3" >
		<%= form_with(model: @room, local: true) do |f| %>
			<div class="center field">
				<h2>ルーム登録編集</h2>
			</div>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="field">
				<%= f.label :ルーム名 %>
				<%= f.text_field :name, class: 'form-control', placeholder: "ルーム名を入力" %>
			</div>
			<div class="field">
				<%= f.label :ルーム紹介 %>
				<%= f.text_area :introduction, class: 'form-control', placeholder: "ルーム説明を入力" %>
			</div>
			<div class="field">
				<%= f.label :料金 %>
				<%= f.text_field :price, class: 'form-control', placeholder: "1日あたりの料金を入力" %>
			</div>
			<div class="field">
				<%= f.label :住所 %>
				<%= f.text_field :address, class: 'form-control', placeholder: "住所を入力" %>
			</div>
			<div class="field">
				<%= f.label :ルーム画像 %>
				<br><%= image_tag @room.room_image, :size => '200x200' %></br>
			</div>
			<div class="field">
				<%= f.file_field :room_image %>
			</div>
			<div class="field">
				<%= f.submit "ルーム情報を更新する", class: "btn btn-primary form-control" %>
			</div>

		<% end%>
	</div>
</div>
