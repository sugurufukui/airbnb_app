<div class="row">
	<div class="col-md-6 col-md-offset-3" >
			<div class="center field">
				<h2>予約内容確認</h2>
			</div>
			<div class="card-body">
				<h3 class="form-group" style="padding-bottom: 10px; border-bottom: 1px solid #eaedef;">
					&yen; <%= @reservation.room.price.to_i %> / 日
				</h3>
				<div class="form-group">
					<label style="margin-bottom: 5px;">チェックイン</label>
					<div class="form-control" style="background-color: #e9ecef;"><%= @reservation.start_date.to_s(:datetime_ymd_jp) %></div>
				</div>
				<div class="form-group">
					<label style="margin-bottom: 5px;">チェックアウト</label>
					<div class="form-control" style="background-color: #e9ecef;"><%= @reservation.end_date.to_s(:datetime_ymd_jp) %></div>
				</div>

				<div class="form-group">
					<label style="margin-bottom: 5px;">宿泊日数：</label>
					<%= (@reservation.end_date - @reservation.start_date).to_i %>日

				</div>

				<div class="form-group">
					<label style="margin-bottom: 5px;">宿泊人数：</label>
					<%= @reservation.person_num.to_i %>人
				</div>

				<div class="form-group" style="border-bottom: 1px solid #eaedef; padding-bottom: 20px;">
					<label style="margin-bottom: 5px;">合計金額</label>
					<div class="form-control" style="background-color: #e9ecef; ">
						<%= @reservation.room.price * (@reservation.end_date - @reservation.start_date).to_i * @reservation.person_num %>円</div>
				</div>

				<%= form_with(model: @reservation, local: true) do |f| %>
					<div class="field">
						<%= f.submit "予約確定", class:"btn btn-primary form-control" %>
					</div>
				<% end %>
					<div class="field">
						<%= link_to " ルーム詳細に戻る", :back, class: "btn btn-default form-control" %>
					</div>
			</div>

      </div>
    </div>
  </div>
</div>
