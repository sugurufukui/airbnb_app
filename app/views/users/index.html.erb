<div class="row">
	<div class="col-3">
		<ul class="nav flex-column">
			<li class="nav-item"><%= link_to "アカウント", account_path, class: 'sidebar-link active' %></li>
			<li class="nav-item"><%= link_to "プロフィール", current_user, class: 'sidebar-link' %></li>
		</ul>
	</div>
	<div class="col-md-6 col-md-offset-3" >
		<%= form_with(model: @user, local: true) do |f| %>
			<div class="field">
				<h2>アカウント</h2>
			</div>
			<div class="field">
				<%= f.label :メールアドレス %>
				<%= current_user.email %>
			</div>
			<div class="field">
				<%= f.label :パスワード %>
				<%= "**********" %>
			</div>

			<div class="field">
				<%= link_to "編集", edit_user_path(current_user), class: 'btn btn-primary form-control' %>
			</div>

		<% end%>
	</div>
</div>
